<h1>Listing answers</h1>

<table>
  <tr>
    <th>Enq</th>
    <th>Num</th>
    <th>Answer</th>
    <th>Update name</th>
    <th>Update date</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @answers.each do |answer| %>
  <tr>
    <td><%= answer.enq_id %></td>
    <td><%= answer.num %></td>
    <td><%= answer.answer %></td>
    <td><%= answer.update_name %></td>
    <td><%= answer.update_date %></td>
    <td><%= link_to 'Show', answer %></td>
    <td><%= link_to 'Edit', edit_answer_path(answer) %></td>
    <td><%= link_to 'Destroy', answer, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

