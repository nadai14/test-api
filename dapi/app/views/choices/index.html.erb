<h1>Listing choices</h1>

<table>
  <tr>
    <th>Question</th>
    <th>Choice</th>
    <th>Content</th>
    <th>Update name</th>
    <th>Update date</th>
  </tr>

<% @choices.each do |choice| %>
  <tr>
    <td><%=h choice.question_id %></td>
    <td><%=h choice.choice_id %></td>
    <td><%=h choice.content %></td>
    <td><%=h choice.update_name %></td>
    <td><%=h choice.update_date %></td>
    <td><%= link_to 'Show', choice %></td>
    <td><%= link_to 'Edit', edit_choice_path(choice) %></td>
    <td><%= link_to 'Destroy', choice, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New choice', new_choice_path %>